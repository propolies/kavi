{
  "trailingComma": "all",
  "semi": false,
  "tabWidth": 2,
  "useTabs": false,
  "singleQuote": false,
  "printWidth": 100,
  "bracketSameLine": true,
  "arrowParens": "always",
  "plugins": ["prettier-plugin-svelte"],
  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "parser": "svelte"
      }
    },
    {
      "files": ["**/kavi/**/*", "./docs/src/content/**/*.md"],
      "options": {
        "printWidth": 60
      }
    }
  ]
}
